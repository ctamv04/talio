<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="243.0" spacing="10.0" xmlns="http://javafx.com/javafx/19"  xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.TaskListController" fx:id="root">
   <Pane>
      <children>
         <HBox alignment="CENTER_LEFT" layoutX="9.0" layoutY="5.0" spacing="10.0">
            <children>
             <Label fx:id="taskList_name" text="Label">
                  <font>
                     <Font size="14.0" />
                  </font>
             </Label>
               <FontAwesomeIconView glyphName="PENCIL" />
            </children>
         </HBox>
         <TextField fx:id="editTaskList_Name" onMouseEntered="#editTaskListNameHoverIn" onMouseExited="#editTaskListNameHoverOut" opacity="0.0" prefHeight="30.0" prefWidth="211.0">
            <font>
               <Font size="14.0" />
            </font>
            <padding>
               <Insets bottom="5.0" left="9.0" top="5.0" />
            </padding>
            <cursor>
               <Cursor fx:constant="TEXT" />
            </cursor>
         </TextField>
       <Button layoutX="217.0" layoutY="3.0" mnemonicParsing="false" onAction="#removeTaskList" prefHeight="14.0" prefWidth="17.0" styleClass="close-button">
           <graphic>
               <FontAwesomeIconView glyphName="TIMES" size="10" />
           </graphic>
       </Button>
      </children>
   </Pane>
    <ScrollPane fx:id="scrollPane" prefHeight="300.0" prefWidth="243.0" vbarPolicy="ALWAYS">
        <Pane fx:id="indicator_pane" prefHeight="302.0" prefWidth="230.0">
            <ListView fx:id="taskCards" prefHeight="400.0" prefWidth="228.0" />
        </Pane>
    </ScrollPane>
   <Button mnemonicParsing="false" onAction="#addTaskCard" text="Add " />
</VBox>
