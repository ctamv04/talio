<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<AnchorPane fx:id="window" prefHeight="400.0" prefWidth="550.0" stylesheets="@../styles/loginPage.css"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.controllers.LoginController">
    <VBox layoutX="50.0" layoutY="96.0" prefHeight="78.0" prefWidth="450.0" spacing="10.0"
          styleClass="create_board_vbox" stylesheets="@../styles/loginPage.css" AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0">
        <children>
            <HBox spacing="10.0">
                <children>
                    <TextField fx:id="code_input" alignment="CENTER" prefHeight="25.0" prefWidth="325.0"
                               promptText="Board#" text="Board#"/>
                    <Button fx:id="join_board_button" defaultButton="true" mnemonicParsing="false" prefHeight="25.0"
                            prefWidth="325.0" text="Join"/>
                </children>
            </HBox>
            <Button fx:id="new_board_button" mnemonicParsing="false" prefWidth="450.0" text="Create a new board"/>
            <Text fx:id="invalid_text" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Not a valid id!"/>
        </children>
    </VBox>
    <Button fx:id="back_button" layoutX="25.0" layoutY="29.0" mnemonicParsing="false" text="Back"
            AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="50.0"/>
    <Button fx:id="admin_login_button" layoutX="50.0" layoutY="29.0" mnemonicParsing="false" text="Login as admin"
            AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="50.0"/>
    <VBox layoutX="22.0" layoutY="185.0" prefHeight="157.0" prefWidth="338.0" spacing="5.0"
          styleClass="visited_boards_vbox" stylesheets="@../styles/loginPage.css" AnchorPane.bottomAnchor="50.0"
          AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="160.0">
        <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Visited Boards"/>
            <HBox prefHeight="117.0" prefWidth="321.0" spacing="10.0">
                <children>
                    <ListView fx:id="boards_view" prefHeight="117.0" prefWidth="205.0"/>
                    <VBox fx:id="buttonBox" prefHeight="61.0" prefWidth="90.0" spacing="5.0">
                        <children>
                            <Button fx:id="enterBoard" mnemonicParsing="false" prefHeight="0.0" prefWidth="75.0"
                                    text="Enter"/>
                            <Button fx:id="delBoard" mnemonicParsing="false" prefWidth="75.0" text="Delete">
                                <VBox.margin>
                                    <Insets top="5.0"/>
                                </VBox.margin>
                            </Button>
                        </children>
                        <HBox.margin>
                            <Insets bottom="50.0" left="10.0" top="5.0"/>
                        </HBox.margin>
                    </VBox>
                </children>
            </HBox>
        </children>
    </VBox>
    <AnchorPane fx:id="overlay" prefHeight="400.0" prefWidth="550.0" style="-fx-background-color: #000000B3;"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0"/>

</AnchorPane>
